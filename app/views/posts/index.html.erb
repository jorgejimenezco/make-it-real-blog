<h1>Posts#index</h1>
<table>
  <thead>
    <th>Author</th>
    <th>Title</th>
    <th>Content</th>
    <th>Options</th>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.author %></td>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= link_to 'Views', post %>
          <%= link_to 'Edit', edit_post_path(post) %>
          <%= link_to 'Delete' , post , method: :delete, data: {confirm: 'Are you sure you want to delete post?'} %>
    </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nuevo Post', new_post_path %>
