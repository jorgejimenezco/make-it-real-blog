<%= form_for @post do |f| %>

<% if @post.errors.any? %>
<div id="errors_explanation">
  <h2><%= pluralize(@post.errors.count, "error") %>
    prohibited this post from being saved:</h2>

    <ul>
    <% @post.errors.full_messages.each do |message| %>
    <li><%=message%></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <%= f.label :author, 'Author:' %>
  <%= f.text_field :author, required:true, class:'form-control' %>
</div>

<div class="form-group">
  <%= f.label :title, 'Title:' %>
  <%= f.text_field :title, required:true, class:'form-control' %>
</div>

<div class="form-group">
  <%= f.label :content %>
  <%= f.text_area :content, rows:10, required:true, class:'form-control' %>
  </div>

  <div>
    <%= f.submit "#{action} Post" %>
    <div class="form-group text-right">
      <%= link_to 'Cancel', posts_path, class: 'btn btn-danger'%>
      <% f.submit "#{action} Post", class: 'btn btn-success' %> 
  </div>
  <% end %>
